@model List<Core_Departman2.Models.Personel>
@{
    ViewData["Title"] = "BirimDetay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
    int count = 0;
}

<br />
<h2> @ViewBag.brm Departmanı</h2>
<br />
@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (Model.Count > 0)
{
    <ul>
        @foreach (var personel in Model)
        {
            <li>
                @personel.Ad @personel.Soyad 

                <span> - Şehir: @personel.Sehir</span>           
            </li>
        }
    </ul>
}

